<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_rounded_borders"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/work_order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_weight="1"
                android:textAppearance="@style/proximanova_Body_Dark"
                android:textStyle="bold"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/status_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/status_options" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/work_order_assigned_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textAppearance="@style/proximanova_Body_Dark"
                android:focusable="false"
                android:clickable="true"
                android:hint="Scheduled Date" />
            <EditText
                android:id="@+id/work_order_assigned_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:layout_alignParentEnd="true"
                android:textAppearance="@style/proximanova_Body_Dark"
                android:focusable="false"
                android:clickable="true"
                android:hint="Scheduled Time" />
        </LinearLayout>

        <TextView
            android:id="@+id/work_order_notes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/proximanova_Body_Dark"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Notes" />
        <EditText
            android:id="@+id/work_order_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Add Notes" />

            <TextView
                android:id="@+id/work_order_supervisor_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/proximanova_Body_Dark"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Supervisor Comments" />
        <TextView
            android:id="@+id/work_order_supervisor_comments_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/proximanova_Body_Dark"
            android:text="Supervisor Comments will be displayed here." />


        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="UPDATE"
            android:textAppearance="@style/button"/>

    </LinearLayout>

</LinearLayout>
