<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:id="@+id/work_order_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/work_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_weight="1"
            android:textAppearance="@style/proximanova_Body_Dark"
            android:textSize="17dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Glowing Light -->
            <View
                android:id="@+id/status_light"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/status_flash" />

            <!-- Status -->
            <TextView
                android:id="@+id/work_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Status"
                android:textAppearance="@style/proximanova_Body_Dark" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/work_order_assigned_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAppearance="@style/proximanova_Body_Dark" />

    <TextView
        android:id="@+id/work_order_assigned_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textAppearance="@style/proximanova_Body_Dark" />

    <TextView
        android:id="@+id/work_order_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Notes"
        android:textAppearance="@style/proximanova_Body_Dark" />


</LinearLayout>
