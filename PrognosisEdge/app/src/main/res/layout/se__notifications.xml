<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/cards"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Row with Icon and Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Category Icon and Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/category_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/repair" /> <!-- Replace with your icon -->

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Maintenance"
                    android:textSize="20dp"
                    android:textAppearance="@style/proximanova_Body_Dark" />
            </LinearLayout>

            <!-- Close Button -->
            <ImageView
                android:id="@+id/close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/close"
                android:contentDescription="Close Notification" />
        </LinearLayout>

        <!-- AppNotification.java Title -->
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Flush water in hot water heaters"
            android:textAppearance="@style/proximanova_Body_Dark"
            android:textStyle="bold" />

        <!-- AppNotification.java Description -->
        <TextView
            android:id="@+id/notification_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You have a task that is overdue and needs your attention."
            android:textAppearance="@style/proximanova_Body_Dark"
            android:textSize="14sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
